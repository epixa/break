extends layouts/main

include mixins/assets.jade
include mixins/forms.jade

block content
  section(ng-controller='ResetPasswordCtrl as resetpwd')
    h1= title
    p Fill out the form below and we'll get you set up with a new password.
    p Remember your password after all? #[a(href='/login') Login] instead.
    +form()(ng-submit!='form.$valid && resetpwd.submit(data)')
      +email()(
        required
        ng-model='data.email'
      )
      +submit()(ng-disabled='resetpwd.submitting')
